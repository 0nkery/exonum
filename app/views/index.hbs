{{> header}}

<div class="header_nav_1 dark blue_moving_bg pix_builder_bg">
    <div class="container">
        <div class="sixteen columns">
            <div class="ten offset-by-three columns">
                <div class="center_text big_padding">
                    <p class="big_title bold_text editContent">Trusted timestamping</p>
                    <p class="big_text normal_gray editContent">
                        Creating secure and anonymous proof of file existence become as&nbsp;simple as&nbsp;<span class="nowrap">one-two-three</span> with <span class="inline-logo">Exonum</span>.
                    </p>
                    <a href="#create-a-stamp" class="pix_button btn_normal pix_button_flat blue_bg bold_text btn_big btn_margin pseudo-link">
                        <span>CREATE A STAMP</span>
                    </a>
                    <a href="/faq" class="pix_button pix_button_line white_border_button bold_text btn_big">
                        <span>LEARN MORE</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dark" id="create-a-stamp">
    <div class="big_padding pix_builder_bg">

        <div class="container">
            <div class="one-third column">
                <div class="f1_box">
                    <div class="medium_icon light_blue">
                        <span class="pi pixicon-upload2"></span>
                    </div>
                    <div class="center_text">
                        <div class="editContent light_gray"><span class="pix_text">STEP 1</span></div>
                        <div class="small_title bold_text"><span class="editContent"><span class="pix_text">Upload your file</span></span></div><br>
                    </div>
                </div>
            </div>
            <div class="one-third column">
                <div class="f1_box">
                    <div class="medium_icon light_blue">
                        <span class="pi pixicon-wallet"></span>
                    </div>
                    <div class="center_text">
                        <div class="editContent light_gray"><span class="pix_text">STEP 2</span></div>
                        <div class="small_title bold_text"><span class="editContent"><span class="pix_text">Pay a $1.00 fee</span></span></div><br>
                    </div>
                </div>
            </div>
            <div class="one-third column omega">
                <div class="f1_box">
                    <div class="medium_icon light_blue">
                        <span class="pi pixicon-check"></span>
                    </div>
                    <div class="center_text">
                        <div class="editContent light_gray"><span class="pix_text">STEP 3</span></div>
                        <div class="small_title bold_text"><span class="editContent"><span class="pix_text">Get certificate of&nbsp;proof</span></span></div><br>
                    </div>
                </div>
            </div>
        </div>

        <br>
        <br>

        <div class="container">
            <div class="sixteen columns">
                <div class="eight columns centered">
                    <div class="center_text">
                        <span class="bold_text big_text blue_text editContent">CREATE A STAMP</span>
                    </div>
                    <form id="create" class="pix_form">
                        <label for="content">Upload file:</label>
                        <input type="file" name="content" id="content" class="pix_text pix_text_dark">
                        <label for="description">Description <small>(optional)</small>:</label>
                        <input type="text" name="description" id="description" placeholder="Describe your file" class="pix_text pix_text_dark">
                        <div class="send_btn">
                            <button type="submit" class="submit_btn pix_text">
                                CREATE
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

{{> footer}}
